<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
     <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
       
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
   
    </style>

     Application theme. 
    <style name="AppTheme" parent="AppBaseTheme">
       All customizations that are NOT specific to a particular API-level can go here. 
    </style>
    -->
  
   <style name="ProgressDialog.Theme" parent="@android:style/Theme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style> 
   <style name="checkbox_style">  
      <item name="android:background">@drawable/ts_selecter_cb</item>  
      <item name="android:button" >@null</item>  
      <item name="android:textColor">#ff888888</item>  
      <item name="android:textSize" >16sp</item>  
      <item name="android:gravity" >center</item>  
    </style>  
  <style name="tab_rb_style">
        <item name="android:layout_width" >0dp</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:layout_weight" >1</item>
        <item name="android:button" >@null</item>
        <item name="android:textColor" >@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity" >center_horizontal|bottom</item>
        <item name="android:layout_gravity" >bottom</item>
     
        <item name="android:background" >@drawable/tab_selector_checked_bg</item>
    </style>
    	<style name="setting_right_image">
        <item name="android:layout_width">9.0dip</item>
        <item name="android:layout_height">14.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
     <style name="setting_box">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
    </style>
    <style name="setting_text" parent="@style/setting_font">
        <item name="android:ellipsize">end</item>
        <item name="android:padding">10.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
     <style name="setting_font" >
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/ts_black</item>
    </style>
       <style name="xline">
        <item name="android:background">@drawable/line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
    </style>
     <style name="setting_xline" parent="@style/xline">
        <item name="android:background">@color/ts_dark_blue</item>
        <item name="android:layout_height">1.0px</item>
    </style>
  
</resources>
